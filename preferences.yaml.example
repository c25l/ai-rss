# H3LPeR Agent-Centric Briefing Preferences
# Copy this to preferences.yaml and customize

# Focus areas - topics you want emphasized
focus_areas:
  - AI and machine learning
  - Climate and environment
  - International relations

# Topics to de-emphasize or exclude
exclude_topics:
  - Sports
  - Celebrity news

# Preferred sources (will be prioritized if mentioned)
preferred_sources:
  - The Atlantic
  - ArXiv
  - TLDR Tech

# Content preferences
content_preferences:
  # Maximum number of articles per section
  max_articles_per_section: 5
  
  # Include Wikipedia context for unfamiliar topics
  include_wikipedia_context: true
  
  # Minimum article age in hours (filter out very recent unverified news)
  min_article_age_hours: 0
  
  # Geographic focus (if any)
  geographic_focus: null  # e.g., "United States", "Europe", "Global"

# Email formatting
email_preferences:
  # Include weather section
  include_weather: true
  
  # Include astronomy/space weather section
  include_astronomy: true
  
  # Include stock market summary
  include_stocks: false
  
  # Email subject line format
  subject_format: "H3LPeR Briefing - {date}"

# Research batches — separate research output into named batches
# Each batch has its own sources, categories, and ranking settings
# Sources with kind: research are assigned to batches by name;
# any research source not matching a batch is included in all batches.
research_batches:
  - name: "AI & ML Research"
    max_papers: 8
    use_original_ranking: true
    categories:
      - cs.AI
      - cs.LG
      - cs.CL
      - cs.CV
  - name: "Systems & Architecture Research"
    max_papers: 5
    use_original_ranking: true
    categories:
      - cs.DC
      - cs.SY
      - cs.PF
      - cs.AR

# Content sources — feeds, scrapers, and special fetchers
# Types: rss, tldr, hn-daily, scrape
# kind: "news" (default) or "research" — research sources produce
#   separate output sections and are excluded from the news briefing.
#   Optionally set "batch" to assign a research source to a specific batch.
sources:
  # News RSS feeds
  - name: "NYT US News"
    url: "https://rss.nytimes.com/services/xml/rss/nyt/US.xml"
    type: rss
  - name: "NYT World News"
    url: "https://rss.nytimes.com/services/xml/rss/nyt/World.xml"
    type: rss
  - name: "The Atlantic"
    url: "https://www.theatlantic.com/feed/all/"
    type: rss
  - name: "Heather Cox Richardson"
    url: "https://heathercoxrichardson.substack.com/feed"
    type: rss
  - name: "MetaFilter"
    url: "https://rss.metafilter.com/metafilter.rss"
    type: rss
  - name: "ACOUP"
    url: "https://acoup.blog/feed/"
    type: rss
  - name: "Longmont Leader"
    url: "https://www.longmontleader.com/rss/"
    type: rss
  - name: "Nature"
    url: "https://www.nature.com/nature.rss"
    type: rss
  - name: "r/Longmont"
    url: "https://www.reddit.com/r/Longmont.rss"
    type: rss

  # Tech RSS feeds
  - name: "Microsoft Research"
    url: "https://www.microsoft.com/en-us/research/feed/"
    type: rss
  - name: "Google AI Blog"
    url: "https://blog.google/technology/ai/rss/"
    type: rss
  - name: "SemiAnalysis"
    url: "https://semianalysis.com/feed/"
    type: rss

  # Scraped / special sources
  - name: "TLDR Tech"
    type: tldr
  - name: "Hacker News Daily"
    type: hn-daily

  # Research sources — kind: research keeps them out of the news briefing
  - name: "ArXiv CS"
    url: "https://export.arxiv.org/rss/cs.DC+cs.SY+cs.PF+cs.AR"
    type: rss
    kind: research
